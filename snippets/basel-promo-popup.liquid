{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{%- assign template_id = template | split: '.' | first -%}
{%- assign st = 'display_newsletter_' | append: template_id -%}
{%- if settings[st] -%}
<div class="basel-promo-popup nathan-promo-popup">
   <div class="basel-popup-inner">
      <div class="gl_row spb_row gl_row-fluid gl_row-o-content-middle gl_row-flex">
         <div class="spb_column gl_column_container gl_col-sm-6">
            <div class="gl_column-inner ">
               <div class="spb_wrapper">
                  <div class="spb_single_image spb_content_element gl_align_left gl_custom_1459944906701">
                     <figure class="spb_wrapper gl_figure">
                        <div class="gl_single_image-wrapper gl_box_border_grey">
                           {%- if settings.newsletter_bg == blank -%}
                              <img src="http://placehold.it/760x800" alt ="placehold">
                           {%- else -%}
                              {%- assign image_size = '760x' -%}
                              {%- assign image = settings.newsletter_bg -%}
                              {%- assign image_size_first = image_size | split: 'x' | first -%}
                              {%- assign image_width = image.width -%}
                              {%- assign image_height = image_size_first | divided_by: image.aspect_ratio | round -%}
                              {%- assign image_width_append = image_width | append:'x' -%}
                              <img width="{{image_size_first}}" height="800" src="{%-include 'gl_image_format',src: image.src , size: image_size -%}" class="gl_single_image-img attachment-full" alt="{{image.alt}}" 
                                 srcset="{%-include 'gl_image_format',src: image.src , size: image_width_append %} {{image_width}}w 
                                 {%- if image_width > 285 -%},{%-include 'gl_image_format',src: image.src , size: '285x' %} 285w{%- endif -%} 
                                 {%- if image_width > 270 -%},{%-include 'gl_image_format',src: image.src , size: '270x' %} 270w{%- endif -%}
                                 {%- if image_width > 266 -%},{%-include 'gl_image_format',src: image.src , size: '266x' %} 266w{%- endif -%}
                                 {%- if image_width > 263 -%},{%-include 'gl_image_format',src: image.src , size: '263x' %} 263w{%- endif -%}
                                 {%- if image_width > 526 -%},{%-include 'gl_image_format',src: image.src , size: '526x' %} 526w{%- endif -%}" sizes="(max-width: {{image_size_first}}px) 100vw, {{image_size_first}}px">
                           {%- endif -%}
                        </div>
                     </figure>
                  </div>
               </div>
            </div>
         </div>
         <div class="spb_column gl_column_container gl_col-sm-6">
            <div class="gl_column-inner ">
               <div class="spb_wrapper">
                  <div class="spb_text_column spb_content_element gl_custom_1459945099927">
                     <div class="spb_wrapper">
                        {% comment %}ly_new_settings_replace_for_[ settings.popup_newsletter_description ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id13489680"] %}{% assign ly_translation = shop.metafields[namespace]["id13489680"] %}{% else %}{% assign ly_translation = settings.popup_newsletter_description %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}
                        {%- if settings.use_newsletter_mailchimp -%}
                           {%- if settings.newsletter_form_action != "" -%}
                           <form id="mc4wp-form-19041994" class="mc4wp-form mc4wp-form-19041994 mc4wp-form-basic" method="post" action="{{ settings.newsletter_form_action }}" target="_blank" data-id="19041994">
                            <div class="mc4wp-form-fields">
                              <p class="mailchimp-input-icon">
                                <label><ly-as-13489681>Email address:</ly-as-13489681> </label>
                                <input type="email" name="EMAIL" placeholder="{% comment %}ly_i18n_replace_for_[ 'general.newsletter_form.email_placeholder' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.newsletter_form.email_placeholder' | t }}{% endcapture %}{% include 'ly-static-string' with '13489683' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" value="{%- if customer -%}{{ customer.email }}{%- endif -%}" required="">
                              </p>
                              <p>
                                <input type="submit" value="{% comment %}ly_i18n_replace_for_[ 'general.newsletter_form.submit' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.newsletter_form.submit' | t }}{% endcapture %}{% include 'ly-static-string' with '13489684' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
                              </p>
                              {%- if bottom -%}<div class="hidden hide"></div>{%- endif -%}
                            </div>
                           </form>
                           {%- else -%}
                           <div style="text-align: center;"><strong><em><ly-as-13489682>Find the form action URL, which is a unique URL that you need to link your store to MailChimp.</ly-as-13489682></em></strong></div>
                           {%- endif -%}
                           {%- else -%}
                           {%- form 'customer', class:'mc4wp-form' -%}
                           <div class="mc4wp-form-fields">
                            <p class="mailchimp-input-icon">
                              <input type="hidden" name="contact[tags]" value="newsletter">
                              <label><ly-as-13489681>Email address:</ly-as-13489681> </label>
                              <input type="email" name="contact[email]" placeholder="{% comment %}ly_i18n_replace_for_[ 'general.newsletter_form.email_placeholder' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.newsletter_form.email_placeholder' | t }}{% endcapture %}{% include 'ly-static-string' with '13489683' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" value="{%- if customer -%}{{ customer.email }}{%- endif -%}" required="">
                            </p>
                            <p>
                              <input type="submit" value="{% comment %}ly_i18n_replace_for_[ 'general.newsletter_form.submit' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.newsletter_form.submit' | t }}{% endcapture %}{% include 'ly-static-string' with '13489684' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}">
                            </p>
                            {%- if bottom -%}<div class="hidden hide"></div>{%- endif -%}
                           </div>
                           {%- if form.posted_successfully? -%}
                           <div class="mc4wp-response"><div class="mc4wp-alert mc4wp-success">{% comment %}ly_i18n_replace_for_[ 'contact.form.post_success' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'contact.form.post_success' | t }}{% endcapture %}{% include 'ly-static-string' with '13489685' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</div></div>
                           {%- elsif form.errors -%}
                           <div class="mc4wp-response"><div class="mc4wp-alert mc4wp-error">{{ form.errors | default_errors }}</div></div>
                           {%- endif -%}
                           {%- endform -%}
                        {%- endif -%}
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <style type="text/css">.gl_custom_1459944906701{margin-top: -20px !important;margin-right: -20px !important;margin-bottom: -20px !important;margin-left: -20px !important;}.gl_custom_1459945099927{margin-bottom: 0px !important;padding-top: 40px !important;padding-right: 20px !important;padding-bottom: 40px !important;padding-left: 20px !important;}</style>
   </div>
</div>
{%- endif -%}