{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="container">
   <div class="wrapp-header">
      {%- include 'gl_logo' -%}
      <div class="main-nav site-navigation basel-navigation menu-{{settings.basel_menu_align}}" role="navigation">{%- section 'gl_mega_menu' -%}</div>
      <!--END MAIN-NAV-->
      <div class="right-column">
         {%- include 'header_wishlist' -%}
         {%- unless settings.regional_site_enabled -%}
          {%- unless settings.cart_design == 'disable' or settings.catalog_mode or template contains 'cart' -%}
          <div class="shopping-cart basel-cart-design-{{settings.cart_design}} basel-cart-icon{%- if settings.cart_position == 'side' %} cart-widget-opener{%- endif %}{%- if settings.shopping_icon_alt %} basel-cart-alt{%- endif -%}">
              <a href="/cart">
                <span><ly-as-13490135>Cart (</ly-as-13490135><span class="cartCount">{{ cart.item_count }}</span>)</span>
                <span class="basel-cart-totals">
                    <span class="basel-cart-number cartCount">{{ cart.item_count }}</span>
                    <span class="subtotal-divider">/</span> 
                    <span class="basel-cart-subtotal"><span class="shopify-Price-amount amount">{{ cart.total_price | money }}</span></span>
                </span>
              </a>
              {%- unless settings.regional_site_enabled -%}
                {%- if settings.cart_position == 'dropdown' -%}
                  <div class="dropdown-wrap-cat">{%- include 'cart_widget_side' -%}</div>
                {%- endif -%}
              {%- endunless -%}
          </div>
          {%- endunless -%}
        {% endunless %}
         <div class="mobile-nav-icon">
            <span class="basel-burger"></span>
         </div>
         <!--END MOBILE-NAV-ICON-->
      </div>
   </div>
</div>
<div class="secondary-header">
   <div class="container">
      {%- if settings.enable_search_category -%}
      <div class="mega-navigation show-on-hover{%- if template contains 'index' %} opened-menu{%- endif -%}" role="navigation">
         <span class="menu-opener"><span class="burger-icon"></span>{% comment %}ly_i18n_replace_for_['sections.categories.browse_categories' | t ]_begin{% endcomment %}{% capture ly_template %}{{'sections.categories.browse_categories' | t }}{% endcapture %}{% include 'ly-static-string' with '13490136' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}<span class="arrow-opener"></span></span>
         <div class="categories-menu-dropdown basel-navigation">
            {%- section 'gl_mega-navigation' -%}
         </div>
      </div>
      {%- endif -%}
      <div class="search-extended">
         <form role="search" method="get" id="searchform" class="searchform{%- if settings.enable_select_category %} has-categories-dropdown{%-  endif %}{%- if settings.ajax_search %} basel-ajax-search{%- endif -%}" action="/search?q=bags">
            <div>
               <label class="screen-reader-text" for="q"></label>
              <input type="text" placeholder="{% comment %}ly_i18n_replace_for_[ 'general.search.placeholder' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.search.placeholder' | t }}{% endcapture %}{% include 'ly-static-string' with '13490137' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}" value="{%- if search.terms != blank -%}{{search.terms}}{%- endif -%}" name="q" id="q" autocomplete="off">
              <input type="hidden" name="type" value="product" />
              {%- if settings.enable_select_category -%}
                {%- section 'gl_search-by-category' -%}
                {%-  endif -%}
               <button type="submit" id="searchsubmit">{% comment %}ly_i18n_replace_for_[ 'general.search.submit' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'general.search.submit' | t }}{% endcapture %}{% include 'ly-static-string' with '13490138' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</button>
            </div>
         </form>
         <div class="search-results-wrapper">
            <div class="basel-search-results">
               <div class="autocomplete-suggestions" style="position: absolute; display: none; max-height: 300px; z-index: 9999;"></div>
            </div>
         </div>
      </div>
   </div>
</div>