{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="xtreme-high-cap-video">
  <div class="container">
    <div class="xtreme-high-video-inner ">
      <h4 class="box-title">{{ section.settings.title }}</h4>

      {%- if section.settings.video %}
        <div class="video-wrap">
          {%- if section.settings.video.type == 'youtube' -%}
            <iframe id="ytplayer" type="text/html"
              src="http://www.youtube.com/embed/{{section.settings.video.id}}?&showinfo=0"
              frameborder="0"/></iframe>
          {%- else if section.settings.video.type == 'vimeo' -%}
            <iframe src="https://player.vimeo.com/video/{{section.settings.video.id}}" width="{video_width}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          {%- else -%}
          {%- endif -%}
        </div>
      {%- endif -%}  
      <!-- <div class="video-wrap">
        <iframe src="//embed.widencdn.net/video/peerlessav/qnejohadzd?u=qabest" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen allowtransparency="true" scrolling="no" style="position:absolute;top:0;left:0;width:100%;height:100%;" ></iframe>
      </div> -->
    </div>
  </div>
</div>
