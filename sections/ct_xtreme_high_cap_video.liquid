{% schema %}
  {
    "name": "Xtreme High Cap Video",
    "class": "section-xtreme-high-video",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Capabilities Video"
      },
      {
       "type": "video_url",
       "id": "video",
       "accept": ["youtube", "vimeo"],
       "label": "Video URL",
       "placeholder": "Enter vide URL",
       "info": "You can use vimeo or youtube"
      }
    ],
    "presets": [
      {
        "category": "Custom Sections",
        "name": "Xtreme High Capabilities Video",
        "settings": {
        }
      }
    ]
  }
{% endschema %}