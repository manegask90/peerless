{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="col-md-10 col-md-offset-1 col-sm-12 col-sm-offset-0">
  {% for block in section.blocks %}
  <div class="block">
      <div class="block-image">
        <img src="{{ block.settings.image | img_url: '400x' }}">
      </div>
      <div class="block-content">
        <h3>{{ block.settings.title }}</h3>
        <h4>{{ block.settings.city }}</h4>
        <p>{{ block.settings.desc }}</p>
      </div>
      <div class="block-button">
        <a href="{% if block.settings.button_url %}{{ block.settings.button_url }}{% else %}javascript:void(0){% endif %}">{{ block.settings.sub_title | escape }}</a>
        {% if block.settings.logo != blank %}
          <img src="{{ block.settings.logo | img_url: '120x' }}">
        {% endif %}
      </div>
  </div>
  {% endfor %}
</div>

<script>
  document.addEventListener("DOMContentLoaded",function(){
    $(".block-button>a").attr('target','_blank');
  });
</script>

{% schema %}
{
  "name": "Case Studies Page",
  "class": "case-studies-sub",
  "settings": [    
  ],
  "blocks": [
    {
        "type": "text",
        "name": "Text column",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Heading",
                "default": "Column heading"
            },
            {
                "type": "text",
                "id": "city",
                "label": "City",
                "default": "New York"
            },
            {
                "type": "text",
                "id": "desc",
                "label": "Text",
                "default": "Describe the main features of your brand or products using a few lines of text along with images or icons."
            },
            {
                "type": "html",
                "id": "sub_title",
                "label": "Button Title",
                "default": "View"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button URL"
            },
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"
            }
        ]
    }
  ]
}
{% endschema %}