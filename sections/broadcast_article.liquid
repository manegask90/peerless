{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% if section.settings.article_show == 'yes' %}
  <div class="broadcast-container">
    <div class="broadcast-cards">
      {% for block in section.blocks %}
      <div class="broadcast-card">
        <img src="{{ block.settings.image.src | img_url: '1024x' }}">
        <div class="broadcast-card-text">
          <span class="broadcast-card-num">0{{ forloop.index }}</span>
          <span class="broadcast-card-title">{{ block.settings.title }}</span>
          <span class="broadcast-card-subtitle">{{ block.settings.subtitle }}</span>
          <span class="broadcast-card-content">{{ block.settings.content }}</span>
        </div>
      </div>
      <br class="responsive-br-{{forloop.index}}">
      {% endfor %}
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Broadcast Article",
    "class": "section-broadcast-article",
    "settings": [
      {
        "type": "select",
        "id": "article_show",
        "label": "Show Article",
        "default": "yes",
        "options": [
          {
            "value": "yes",
            "label": "Yes"
          },
          {
            "value": "no",
            "label": "No"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "article",
        "name": "Article",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Leading Technology"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Sub Title",
            "default": "Broadcast"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<p>Peerless-AVÂ® has a complete range of audio visual equipment ideal for the broadcast industry.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Custom Sections",
        "name": "Broadcast Article",
        "settings": {
          "article_show": "yes"
        }
      }
    ]
  }
{% endschema %}