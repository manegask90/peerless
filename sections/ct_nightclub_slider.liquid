          },
          {
           "type": "html",
           "id": "html_area",
           "label": "Custom HTML"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Custom Sections",
        "name": "Nightclub Slider",
        "settings": {
          "slider_show": "yes"
        }
      }
    ]
  }
