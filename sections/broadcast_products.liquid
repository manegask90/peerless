{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="featured-products-container">
  <div class="featured-products-header">{{section.settings.header}}</div>
  <div class="featured-products-border"><span></span></div>
  <div class="featured-products-inner">
      {% for block in section.blocks %}
        {% assign product = all_products[block.settings.product] %}
        {% include 'custom_loop_product' %}
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Broadcast Products",
    "class": "section-custom-products",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Header",
        "default": "Featured Broadcast Products"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Custom Sections",
        "name": "Broadcast Products",
        "settings": {
          "header": "Featured Broadcast Products"
        }
      }
    ]
  }
{% endschema %}